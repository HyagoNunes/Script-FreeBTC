{
    "manifest_version": 3,
    "name": "Void-Hub FreeBTC",
    "version": "1.0",
    "description": "Auto Roll FreeBTC",
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://freebitco.in/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "content_scripts": [
        {
            "matches": ["https://freebitco.in/*"],
            "js": ["script.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [{
        "resources": ["assets/*"],
        "matches": ["https://freebitco.in/*"]
    }]
}
 